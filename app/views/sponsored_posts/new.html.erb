<h1>New Sponsored Post</h1>

<div class="row">
  <div class="col-md-4">
    <p>Guidelines for sponsored posts</p>
    <ul>
      <li>Don't mention how much you paid.</li>
      <li>Use correct grammar.</li>
      <li>Don't write clickbait.</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for [@sponsored_post.topic, @sponsored_post] do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', placeholder: "Enter sponsored post title" %>
    </div>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_field :body, rows: 8, class: 'form-control', placeholder: "Enter sponsored post ad" %>
    </div>
    <div class="form-group">
      <%= f.label :price %>
      <%= f.text_field :price, class: 'form-control', placeholder: "Enter price" %>
    </div>
    <div class="form-group">
      <%= f.submit "Submit", class: 'btn btn-success' %>
    </div>
    <% end %>
  </div>
</div>
