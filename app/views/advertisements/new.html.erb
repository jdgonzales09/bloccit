<h1>New Ad</h1>

<div class="row">
  <div class="col-md-12">
    <%= form_for @advertisement do |a| %>
      <div class="form-group">
        <%= a.label :title %>
        <%= a.text_field :title, class: 'form-control', placeholder: "Enter ad body" %>
      </div>
      <div class="form-group">
        <%= a.label :body %>
        <%= a.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter post body" %>
      </div>
      <div class="form-group">
        <%= a.label :price %>
        <%= a.text_field :price, class: 'form-crontrol', placeholder: "Ad price here" %>
      </div>
      <div class="form-group">
        <%= a.submit "Submit", class: 'btn btn-success' %>
      </div>
      <% end %>
    </div>
</div>
